<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:background="?android:attr/colorControlActivated"
    tools:context="threewolves.amazingracing.Main">
    <TextView
        android:background="@drawable/point"
        android:text="@string/point"
        android:layout_marginTop="10dp"
        android:id="@+id/point"
        android:textColor="#d49b2a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/point"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="@string/title"
        android:textColor="#1ebe90"
        android:textSize="35dp" />
    <Button
        android:id="@+id/buttonStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        android:background="@drawable/custom_start"
        android:textColor="#1b9c9a"
        android:text="@string/start" />
    <CheckBox
        android:button="@drawable/custom_checkbox"
        android:id="@+id/checkboxOne"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:button="@drawable/custom_checkbox"
        android:id="@+id/checkboxTwo"
        android:layout_above="@+id/checkboxOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />

    <CheckBox
        android:layout_marginBottom="10dp"
        android:button="@drawable/custom_checkbox"
        android:id="@+id/checkboxThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkboxTwo" />
    <SeekBar
        android:thumb="@drawable/custom_seekbar"
        android:id="@+id/seekbarOne"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/checkboxOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <SeekBar
        android:thumb="@drawable/custom_seekbar"
        android:layout_marginBottom="15dp"
        android:id="@+id/seekbarTwo"
        android:layout_toRightOf="@+id/checkboxTwo"
        android:layout_above="@id/seekbarOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <SeekBar
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/checkboxThree"
        android:thumb="@drawable/custom_seekbar"
        android:layout_above="@+id/seekbarTwo"
        android:id="@+id/seekbarThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
